        {{#if isAdmin}}
        <a class="viewMyPin" href="/user/{{user.id}}/pins">
            <button type="button" class="btn btn-default" style="right:10px">View my pins</button>
        </a>

        {{else}}
        <a class="viewMyPin" href="/user/{{user.id}}/pins">
            <button type="button" class="btn btn-default" style="right:10px">View {{ user.username}}'s Pins ></button>
        </a>

        {{/if}}
        <a class="exploreOthers" href="/user/pins">
            <button type="button" class="btn btn-default">Explore the World ></button>
        </a>
</div>
