<div class="newPinPage">
<h1> Create New Pin </h1>
  <br>
  <div class="createNewPin">
    <form action="/user/{{user.id}}/pins" method="POST">
      <div class="form-group">
        <label for="title">Title:</label>
        <input type="text" class="form-control" name="title" id="exampleInputEmail1" placeholder="Pin Title">
      </div>
      <div class="form-group">
        <label for="location">Location:</label>
        <input type="text" name="location" class="form-control" placeholder="location">
      </div>
      <div class="form-group">
        <label for="imgUrl">image Url:</label>
        <input type="text" name="imgUrl" class="form-control" placeholder="Put Image Url">
      </div>
      <div class="form-group">
        <label for="notes">Notes: </label>
        <textarea class="form-control" row="3" name="notes" placeholder="Write Notes"></textarea>
      </div>
      <div class="form-group">
        <label for="liked">Liked?</label><br>
        <input type="radio" value="true" name="liked"> Yes   
        <input type="radio" value="false" name="liked"> No<br><br>
      </div>
      <div class="form-group">
        <input style="margin-right:10px" type="submit" class="btn btn-default" value="Create New Pin">
        <p style="display:inline">
        <a href="/user/{{user.id}}/pins"> < Return to My Pins</a></p>
      </div>
    </form>

  </div>
</div>