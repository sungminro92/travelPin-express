<h1>Edit {{user.username}}'s Track</h1>
<form action="/user/{{../user.id}}/tracks/{{track.id}}?_method=PUT" method="POST">
  <div>
    <label for="title"> Title: </label>
    <input type="text" name="title" value="{{track.title}}"/>
  </div>
  <div>
    <label for="location"> Lcation: </label>
    <input type="text" name="location" value="{{track.location}}">
  </div>
  <div>
  	<label for="imageUpload"> Select image file to upload: </label>
  	<input type="file" name="imageUrl" value="{{track.imgUrl}}">
  </div>
  <div>
    <input type="submit" value="Update User"/>
  </div>
</form>

<nav>
	<ul>
    <li class="nav">
      <a href="/{{../user.id}}">Return to Home</a>
    </li>
  </ul>
</nav>